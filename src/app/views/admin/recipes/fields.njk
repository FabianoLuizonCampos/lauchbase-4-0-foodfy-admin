<!-- IMAGE --> 
<div class="item">
    <div>Imagem da receita</div>
    <div>
        <input type="url" name="image" placeholder="http://" value="{{item.image}}">
    </div>
</div>

<!-- TITLE --> 
<div class="item">
    <div>Título</div>
    <div>
        <input type="text" name="title" placeholder="" value="{{item.title}}">
    </div>
</div>

<!-- AUTHOR --> 
<div class="item">
    <div>Chefe</div>
    <div>
        <input type="text" name="author" placeholder="" value="{{item.author}}">
    </div>
</div>

<!-- INGREDIENTES --> 
<div class="item" id="ingredients">

    <div>Ingredientes</div>
    
    <div class="ingredient">
        <input type="text" name="ingredients[]" placeholder="" value="">
    </div>              

</div>

<a class="add-ingredient">Adicionar novo ingrediente</a>


<!-- PREPARATION --> 
<div class="item" id="preparations">

    <div>Modo de Preparo</div>

    <div class="preparation">
        <input type="text" name="preparation[]" placeholder="" value="">
    </div>

</div>

<a class="add-preparation">Adicionar novo preparo</a>

<!-- INFORMATION --> 
<div class="item">
    <div>Informações adicionais</div>
    <div class="info">
        <textarea name="information" cols="30" rows="10" placeholder="" value=""></textarea>
    </div>
</div>             
                
